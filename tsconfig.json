{
    "compilerOptions": {
      "lib": ["es2015", "dom"],
      "module": "commonjs",
      "moduleResolution": "node",
      "target": "es2020",
  
      "types": ["node"],
  
      "typeRoots": [],
  
      "baseUrl": ".",
  
      "paths": {
        "@/*": ["./app/*"]
      },
  
      "noUnusedLocals": true,
      "strict": false,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["./app/**/*.ts", "./app/**/*.js"]
  }